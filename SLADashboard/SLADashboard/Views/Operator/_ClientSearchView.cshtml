@using SLADashboard.Core
@model List<Client>

@foreach (var client in Model.OrderBy(_ => _.Description))
{
    <div class="panel">
        <div class="panel-heading panel-display">
            <h4 class="panel-title" >
                <a data-toggle="collapse" href="#@client.ID" style="font-size:20px;"><span id='@client.Description' class="glyphicon glyphicon-triangle-right"></span> @client.Description</a>
            </h4>
        </div>
        <div id=@client.ID class="panel-collapse collapse">
            <ul class="list-group">
                @foreach (var profile in @client.Profiles)
                {
                    <li class="list-group-item"><a href="@Url.Action("SLAValues", "Operator", new { @profileID = profile.ID,selectedYear=DateTime.Now.Year,selectedMonth=DateTime.Now.Month})"> @profile.Name - @profile.Description </a></li>
                }
            </ul>
        </div>
    </div>
}